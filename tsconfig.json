{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "module": "commonjs",
        "baseUrl": "./src",
        "outDir": "dist",
        "paths": {
            "@/*": ["./*"]
        },
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false
    },
    "files": ["index.d.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
